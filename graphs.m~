clc; clear;
r = 0 : 0.01 : 1.0;
t = (0 : 0.002 : 0.2)';
t = repmat(t, 1, length(r));

figure;
fplot(@(x) x * 18 + (1.0 - x) * 54);
hold on;
fplot(@(x) x * 24 + (1.0 - x) * 54);
axis([0 1 0 60]);
legend([{'水'}, {'食物'}], 'Location', 'best');
xlabel('晴天概率');
ylabel('期望');

figure;
z = f(r, t);
s = surf(r, t, z);
hold on;
z = g)
s.EdgeColor = 'none';
s.FaceAlpha = 0.5;
hold on;

axis([0 1 0 0.1 0 160]);
legend([{'水'}, {'食物'}], 'Location', 'best');
xlabel('晴天概率');
ylabel('沙暴概率');
zlabel('期望');

function ret = f(x, y)
    ex = x .* 48 + (1.0 - x) .* 144;
    ret = y .* ex + (1.0 - y) .* (ex * 8 + 10) ./ 9;
end

function ret = g(x, y)
    ex = x .* 64 + (1.0 - x) .* 144;
    ret = y .* ex + (1.0 - y) .* ex;
end
