function graphs()
    line_plot();
    stock_plot();
    scatter_plot();
end

function line_plot()
    x = 0.0 : 0.1 : 2.0 * pi;
    y1 = cos(x);
    y2 = sin(x);
    
    figure;
    plot(x, y1, 'b', x, y2, 'r-.', 'LineWidth', 2);
    grid on;
    axis([0 2.0 * pi -1.5 1.5]);
    title('Trigonometric Functions');
    xlabel('angle');
    ylabel('sin(x) & cos(x)');
end

function stock_plot()
    t1 = datetime(2018, 1, 1, 8, 0, 0);
    t2 = datetime(2020, 1, 1, 8, 0, 0);
    t = t1 : t2;
    rd = rand(length(t), 2) .* 100.0;
    series = [{'随便'}, {'不知道'}];
    
    figure;
    plot(t, rd);
    datetick('x');
    xlabel('Date');
    ylabel('Index Value');
    title('Relative Daily Index Closings');
    legend(series, 'Location', 'northwest');
end

function scatter_plot()
    x = 0.0 : 0.1 : 2.0 * pi;
    y1 = sin(x) + rand() * 2.0;
    y2 = cos(x) + rand() * 2.0;
    figure;
    plot(x, y1, 'bo');
    hold on;
    plot(x, y2, 'r+');
    axis([0 2.0 * pi -5.0 5.0]);
    title('RV plot');
    xlabel('It doesn''t matter');
    ylabel('I dunno');
    series = [{'dunno'}, {'doesn''t matter'}];
    legend(series, 'Location', 'northeast');
end

function datetime_plot()
    t1 = datetime(2020, 7, 2, 8, 0, 0);
    t2 = datetime(2020, 9, 5, 8, 0, 0);
    t = t1 : t2;
    rd1 = sin(t) + rand() * 2.0;
    rd2 = cos(t) + rand() * 2.0;
    figure;
    plot(t, rd1);
    limits = [t1, t2];
    xlim(limits);
    ax = gca;
    ax.XAxis.TickLabelFormat = 'MMMM dd';
    ax.XAxis.TickLabelRotation = 40;
    xl
end
